{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "src/**", "tsconfig.json", "tsdown.config.ts"],
      "outputs": [".output/**", "build/**", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "test/**", "tsconfig.json"],
      "outputs": [".tsbuildinfo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": ["src/**", "test/**", "tsconfig.json", "vitest.config.ts"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "prepublishOnly": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "dependsOn": ["^db:generate"]
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate"]
    },
    "db:pull": {
      "dependsOn": ["^db:pull"]
    },
    "db:push": {
      "dependsOn": ["^db:push"]
    },
    "db:studio": {
      "dependsOn": ["^db:studio"]
    }
  }
}
