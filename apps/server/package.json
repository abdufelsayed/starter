{
  "name": "@starter/server",
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf build node_modules dist .turbo .tsbuildinfo",
    "dev": "bun --watch src/server.ts",
